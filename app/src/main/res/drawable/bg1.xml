<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#673AB7" />
            <gradient android:angle="-90" android:startColor="#4D8CBD" android:endColor="#3F51B5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3F51B5" />
            <solid android:color="#958C74"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3F51B5" />
            <gradient android:angle="-90" android:startColor="#C0DBF1" android:endColor="#515EA6" />
        </shape>
    </item>

</selector>